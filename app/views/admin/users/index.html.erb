<div class="container">
  <div class="row">
    <%= render partial: "admin/shared/navtabs" %>
  </div>
  <div class="row">
    <table class="table table-hover">
      <thead class="thead-light">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td data-link="<%= user_path(user) %>"><%= user.name %></td>
            <td data-link="<%= user_path(user) %>"><%= user.email %></td>
            <td data-link="<%= user_path(user) %>"><%= user.role %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>